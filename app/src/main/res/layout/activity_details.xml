<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ui.activity.Details">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/backgroundColor"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/textColorSecondary" />


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/ivBack"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                tools:text="dfadfmadkfda jfkadjf adklfjadd addsf " />


        </RelativeLayout>

        <View
            android:id="@+id/dividerLine"
            android:layout_width="match_parent"
            android:layout_height=".2dp"
            android:background="@color/textGrey" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="140dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_placeholder_portrait" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        tools:text="Pirates of the Caribbean: The Curse of the Black Pearl" />

                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="16sp"
                        tools:text="(2003)" />

                    <TextView
                        android:id="@+id/tv_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_language"
                        app:drawableTint="@color/textColorSecondary"
                        tools:text="English" />


                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_outlined_flag"
                        app:drawableTint="@color/textColorSecondary"
                        tools:text="United States" />


                    <TextView
                        android:id="@+id/tv_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_movie_filter"
                        app:drawableTint="@color/textColorSecondary"
                        tools:text="Action, Adventure, Fantasy" />


                    <TextView
                        android:id="@+id/tv_released"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_date"
                        app:drawableTint="@color/textColorSecondary"
                        tools:text="09 Jul 2003" />


                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/backgroundColor"
                android:layout_margin="8dp"
                android:elevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Runtime"
                        android:layout_gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="143 Minute" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMDB Rating"
                        android:layout_gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="8.1/10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Box Office"
                        android:layout_gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_box_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="$305,413,918" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/backgroundColor"
                android:layout_margin="8dp"
                android:elevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actors"
                        android:layout_gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_actor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="Johnny Depp, Geoffrey Rush, Orlando Bloom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writer"
                        android:layout_gravity="start"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_writer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="Ted Elliott, Terry Rossio, Stuart Beattie" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Director"
                        android:layout_gravity="start"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_directory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="Ted Elliott, Terry Rossio, Stuart Beattie" />




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/backgroundColor"
                android:layout_margin="8dp"
                android:elevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plot"
                        android:layout_gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_plot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="Johnny Depp, Geoffrey Rush, Orlando Bloom" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/backgroundColor"
                android:layout_margin="8dp"
                android:elevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Awards"
                        android:layout_gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_awards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="start"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:text="Johnny Depp, Geoffrey Rush, Orlando Bloom" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>